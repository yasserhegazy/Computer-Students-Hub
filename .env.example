# =========================
# Django / Backend Settings
# =========================

# Hosts allowed to access Django
# Railway backend, localhost for dev, optional frontend proxy if needed
ALLOWED_HOSTS=allowed_origins

# Secret key (generate a strong one for production)
DJANGO_SECRET_KEY=replace_this_with_a_secure_random_key

# Debug mode: True for development, False for production
DEBUG=True

# =========================
# Database
# =========================
# Railway usually provides a DATABASE_URL automatically
DATABASE_URL=postgres://username:password@host:port/dbname

# =========================
# Frontend / CORS
# =========================
# Domains allowed to make API requests to Django
# Include Next.js local dev (http://localhost:3000) and Vercel production
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001,https://computer-students-hub.vercel.app

# =========================
# Other settings (optional)
# =========================
# For static and media URLs
STATIC_URL=/static/
MEDIA_URL=/media/